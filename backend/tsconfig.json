{
  "compilerOptions": {
    "target": "es2020",    
    "module": "commonjs",  
    "moduleResolution": "node",
    "rootDir": "./", 
    "outDir": "./dist",               
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                            
    "skipLibCheck": true                                
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
